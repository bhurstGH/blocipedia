<!DOCTYPE html>
<html class="no-js" lang="en">
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <% include ../static/partials/navbar.ejs %>
        <% include ../static/partials/messages.ejs %>

        <main class="grid-container">
            <div class="grid-y">
                <div class="cell">
                    <h1><%= `${user.username}'s` %> Wikis:</h1>
                    <% if (wikis) { %>
                        <ul>
                            <% wikis.forEach((wiki) => { %>
                            <li>
                                <a href="/wikis/<%= wiki.id %>">
                                    <%= wiki.title %>
                                </a>
                                <% if (wiki.private == true) { %>
                                    <span class="success badge">Private</span>
                                <% } %>
                            </li>
                            <% }) %>
                        </ul>
                    <% } %>
                </div>
                <% if (collabs) { %>
                    <div class="cell">
                        <h2>Collaborator on:</h2>
                        <ul>
                            <% collabs.forEach((collab) => { %>
                                <a href="/wikis/<%= collab.id %>"><%= collab.title %></a>
                            <% }) %>
                        </ul>
                    </div>
                <% } %>
            </div>
        </main>

        <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>