<div data-sticky-container>
    <nav class="top-bar" data-sticky data-options="marginTop:0;" style="width:100%">
        <div class="top-bar-left">
            <ul class="menu">
                <li><a href="/" class="menu-text">Blocipedia</a></li>
            </ul>
        </div>
        <div class="top-bar-right">
            <% if (currentUser) { %>
                <ul class="dropdown menu" data-dropdown-menu>
                    <li>
                        <a href="/users/<%= currentUser.id %>" class="menu-text"><%= currentUser.username %></a>
                        <ul class="menu">
                            <li>
                                <a href="/users/<%= currentUser.id %>">Profile</a>
                            </li>
                            <li>
                                <a href="/wikis/new">New Wiki</a>
                            </li>
                            <% if (currentUser.role !== "premium") { %>
                            <li>
                                <a href="/payments/premium_signup">Premium</a>
                            </li>
                            <% } else { %>
                                <a href="/users/<%= currentUser.id %>/downgrade">Cancel Premium</a>
                            <% } %>
                            <li>
                                <a href="/users/signout">Sign Out</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            <% } else { %>
                <ul class="menu">
                    <li>
                        <a href="/users/signup" class="hollow button">Sign Up</a>
                    </li>
                    <li>
                        <a href="/users/signin" class="hollow button">Sign In</a>
                    </li>    
                </ul>
            <% } %>
        </div>
    </nav>
</div>