<!DOCTYPE html>
<html class="no-js" lang="en">
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <% include ../static/partials/navbar.ejs %>
        <% include ../static/partials/messages.ejs %>

        <div class="grid-container">
            <div class="grid-x grid-padding-x align-center">
                <h2 class="cell text-center">Create a new wiki!</h2>
                <form method="POST" action="/wikis/create" class="callout small-12 medium-8">
                 
                    <div class="cell">
                        <label>Title:</label>
                        <input type="text" name="title" placeholder="Enter Title" />
                    </div>
                    <div class="cell">
                        <label>Body:</label>
                        <textarea rows="20" name="body" placeholder="Start Wiki'ing!"></textarea>
                    </div>
                    <div class="grid-x grid-margin-x">
                        <div class="cell shrink">
                            <input type="submit" value="Create" class="button primary" />
                        </div>
                        <% if (currentUser.isPremium() || currentUser.isAdmin()) { %>
                        <div class="cell shrink">
                            <div class="input-group">
                                <label for="private" class="text-right middle">Make Wiki Private:</label>
                                <div class="switch large">
                                    <input class="switch-input" id="private" type="checkbox" name="private">
                                    <label class="switch-paddle" for="private">
                                        <span class="show-for-sr">Private switch</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </form>
            </div>
        </div>

        <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>